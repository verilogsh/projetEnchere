@model Enchere.Models.ViewModel.UpdateEnchereViewModel
@using Enchere.Ressource
@{
    ViewBag.Title = "UpdateEnchere";
}

<h2>@ResourceView.Donnervotreprix:</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.PasDePrix)
        @Html.HiddenFor(model => model.PrixAchat)

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.IdObjet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdObjet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.IdVendeur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdVendeur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.IdAcheteur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdAcheteur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@ResourceView.PrixActuel: </label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.PrixAchat, new { htmlAttributes = new { @class = "form-control" } }) $
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@ResourceView.Augmentationminimale: </label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.PasDePrix, new { htmlAttributes = new { @class = "form-control" } }) $
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@ResourceView.Prixpropose: </label>
            <div class="col-md-10">
                @Html.TextBox("Prix", "", new { htmlAttributes = new { @class = "form-control" } }) $
                @Html.ValidationMessageFor(model => model.Prix, "", new { @class = "text-danger" })
                <h4 style="color:red">@ViewBag.err</h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.DateDepart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateDepart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.DateFin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateFin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Etat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Etat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="OK" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@ResourceView.Listedesobjets, "gestionObjetMembre", "Objet")
</div>
