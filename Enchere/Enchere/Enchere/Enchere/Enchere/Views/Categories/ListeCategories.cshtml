@using Enchere.Models
@using Enchere.Ressource
@{
    ViewBag.Title = "ListeCategories";
}

<h2>Liste @ResourceView.Catégorie</h2><h2>s</h2>
<br />
@Html.ActionLink("Nouvelle categorie", "AjouterCateg", "Categories")
<br /><br /><br />
<table class="table">
    <tr>
        <th>@Html.ActionLink(@ResourceView.Numéro, "ListeCategories", "Categories", new { Order = ViewBag.IdOrder }, null)</th>
        <th>@Html.ActionLink(@ResourceView.nom2, "ListeCategories", "Categories", new { Order = ViewBag.NomOrder }, null)</th>
        <th>Description</th>
       
    </tr>
    @{ if (ViewBag.Cat != null)
        {

            try
            {

                foreach (Categorie c in ViewBag.Cat)
                {
    <tr>
        <td>
            @c.Id
        </td>
        <td>
            @c.Nom
        </td>
        <td>
            @c.Description
        </td>
        <td>
            @Html.ActionLink(@ResourceView.Editer, "ModifierCateg", "Categories", new { Id = c.Id }, null)
        </td>
        <td>
            @Html.ActionLink(@ResourceView.Supprimer, "DeleteCateg", "Categories", new { Id = c.Id }, null)
        </td>

    </tr>
                }

            }
            catch { }
        }
    }
</table>



